{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Vercel needs JS output for API routes

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts", "api/**/*.ts", "src/global.d.ts"]
}
